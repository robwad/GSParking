 <%= form_tag '/checkdetails' do %>
	<div class="field">
		<%= text_field_tag :email, nil, placeholder: "Email Address"%>
	</div>
	<div class="field">
		<br>
		<%= text_field_tag :password, nil, placeholder: "Password"%>
	</div><br>
	<div>
		<br>
		<a class="btn btn-secondary btn-lg" href="/choosebay">Cancel</a> &ensp;
